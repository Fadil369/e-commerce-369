# E-Commerce 369 Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Database Configuration
DATABASE_URL=your_cloudflare_d1_database_url

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long

# Security
SALT_SECRET=your-password-salt-secret-minimum-32-characters

# MADA Payment Gateway (Saudi Arabia)
MADA_API_KEY=your_mada_api_key
MADA_MERCHANT_ID=your_mada_merchant_id
MADA_API_URL=https://api.mada.sa/v1

# STC Pay (Saudi Telecom Company)
STC_PAY_API_KEY=your_stc_pay_api_key
STC_PAY_MERCHANT_ID=your_stc_pay_merchant_id
STC_PAY_API_URL=https://api.stcpay.com.sa/v2

# Stripe (International payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_API_URL=https://api.sandbox.paypal.com  # Use https://api.paypal.com for production

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Application URLs
FRONTEND_URL=https://your-domain.com
API_URL=https://api.your-domain.com

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# File Upload Configuration
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=e-commerce-369-assets

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_AUTH_ATTEMPTS_PER_15MIN=10

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Development/Production Environment
NODE_ENV=development  # or 'production'

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Session Configuration
SESSION_TIMEOUT_HOURS=24
REFRESH_TOKEN_THRESHOLD_HOURS=24
