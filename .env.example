# Cloudflare Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Next.js Public Environment Variables
NEXT_PUBLIC_SITE_NAME="E-Commerce 369"
NEXT_PUBLIC_SITE_DESCRIPTION="Saudi Women's Fashion Platform"
NEXT_PUBLIC_SITE_URL="https://e-commerce-369.pages.dev"
NEXT_PUBLIC_API_URL="https://api.e-commerce-369.workers.dev"

# Language and Localization
NEXT_PUBLIC_DEFAULT_LOCALE="ar"
NEXT_PUBLIC_SUPPORTED_LOCALES="ar,en"
NEXT_PUBLIC_RTL_SUPPORT="true"

# Saudi Payment Gateway Configuration
# MADA Payment Gateway
MADA_MERCHANT_ID=your-mada-merchant-id
MADA_API_KEY=your-mada-api-key
MADA_SECRET_KEY=your-mada-secret-key
MADA_SANDBOX=true

# STC Pay Configuration
STC_PAY_MERCHANT_ID=your-stc-pay-merchant-id
STC_PAY_API_KEY=your-stc-pay-api-key
STC_PAY_SECRET_KEY=your-stc-pay-secret-key
STC_PAY_SANDBOX=true

# International Payment Gateways
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_SANDBOX=true

# Database Configuration
DATABASE_URL=your-d1-database-connection-string

# JWT Configuration for Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Saudi Market Specific
SAUDI_TAX_RATE=0.15
SAUDI_CURRENCY=SAR
SAUDI_SHIPPING_ZONES=riyadh,jeddah,dammam,mecca,medina

# Security Configuration
ENCRYPTION_KEY=your-encryption-key
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=your-google-analytics-id
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Image and Asset Management
R2_BUCKET_NAME=e-commerce-369-assets
R2_PUBLIC_URL=https://assets.e-commerce-369.com
CLOUDFLARE_IMAGES_ACCOUNT_HASH=your-cloudflare-images-hash

# Development Configuration
NODE_ENV=development
LOG_LEVEL=debug
